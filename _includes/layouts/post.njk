---
layout: layouts/base.njk
author: "{{ author or 'default' }}"
---

{# Only include the syntax highlighter CSS on blog posts, included with the CSS
per-page bundle #}
<style>
	{% include "node_modules/prismjs/themes/prism-okaidia.css" %}
</style>
<style>
	{% include "css/prism-diff.css" %}
</style>

{# This script is no longer needed as the data-author attribute is set in
base.njk #} {#
<script>
	document.body.setAttribute("data-author", "{{ author }}");
</script>
#}

<h1>{{ title }}</h1>

<ul class="post-metadata">
	<li>
		<time datetime="{{ page.date | htmlDateString }}">{{
			page.date | readableDate
		}}</time>
	</li>
	{% if authorData and authorData.name %}
	<li class="post-author">
		<strong>By {{ authorData.name }}</strong>
	</li>
	{% else %}
	<li class="post-author">
		<strong>By {{ author }}</strong>
	</li>
	{% endif %} {%- for tag in tags | filterTagList %} {%- set tagUrl %}/tags/{{
		tag | slugify
	}}/{% endset %}
	<li>
		<a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a
		>{%- if not loop.last %}, {% endif %}
	</li>
	{%- endfor %}
</ul>

{{ content | safe }}

{%- if collections.posts %} {%- set previousPost = collections.posts |
getPreviousCollectionItem %} {%- set nextPost = collections.posts |
getNextCollectionItem %} {%- if nextPost or previousPost %}
<ul class="links-nextprev">
	{%- if previousPost %}
	<li class="links-nextprev-prev">
		← Previous<br />
		<a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
	</li>
	{% endif %} {%- if nextPost %}
	<li class="links-nextprev-next">
		Next →<br /><a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
	</li>
	{% endif %}
</ul>
{%- endif %} {%- endif %}
